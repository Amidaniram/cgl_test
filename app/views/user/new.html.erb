<% content_for :content do %>
<div class="content" role="main">
  <a href="" class="online-stream-btn">Онлайн стрим</a>
  <div class="content__block">
    <div class="content__block__heading heading">
      <h1>Регистрация</h1>
    </div>

    <div class="content__block__content">
      <div class="register-block">
        <%= form_for(@user, url: registration_path(@user, game: params[:game]), method: :post) do |f| %>
            <% if @profile.errors.any? %>
                <h1>assdfdgfhgfgdfssdsfd</h1>
                <div id="error_explanation">
                  <h2><%= pluralize(@profile.errors.count, "error") %> in creating Account : </h2>
                  <ul>
                    <% @profile.errors.each do |attr,msg| %>
                        <li><%=attr %> | <%=msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>
            <% if @user.errors.any? %>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
            <% end %>
            <div class="info-field">
            <label class="info-field__item info-field__item--text">
              <%= f.text_field :email, class: "info-field__item__input", placeholder: "E-mail" %>
            </label>
          </div>
          <div class="info-field">
            <label class="info-field__item info-field__item--text">
              <%= f.text_field :username, class: "info-field__item__input", placeholder: "Имя пользователя" %>
            </label>
          </div>
          <div class="info-field">
            <label class="info-field__item info-field__item--text info-field__item--password">
              <%= f.password_field :password, class: "info-field__item__input", placeholder: "Пароль" %>
            </label>
            <div class="info-field__pass-strength info-field__pass-strength-green">Сложный <span></span></div>
          </div>
          <div class="info-field">
            <label class="info-field__item info-field__item--text info-field__item--password">
              <%= f.password_field :password_confirmation, class: "info-field__item__input", placeholder: "Подтвердите пароль" %>
            </label>
            <div class="info-field__pass-strength info-field__pass-strength-green">Совпадает</div>
          </div>
          <div class="">
            <div class="checkbox">
              <input type="checkbox" id="cb1"/>
              <label for="cb1">
                <span></span>
                Принимаю условия соглашения
              </label>
            </div>
          </div>
          <div class="info-field">
            <%= f.submit "Регистрация", class: "button-submit" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>